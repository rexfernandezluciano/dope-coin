{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30,
        "runtime": "nodejs22.x"
      }
    }
  ],
  "installCommand": "npm --production=false install",
  "buildCommand": "npm run build",
  "functions": {
    "api/**/*.js": {
      "excludeFiles": "node_modules/rollup/**"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.ts"
    }
  ]
}
