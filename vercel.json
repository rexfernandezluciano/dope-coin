{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "installCommand": "npm install --force",
  "buildCommand": "npm run build",
  "outputDirectory": "client/dist",
  "functions": {
    "api/**.ts": {
      "maxDuration": 30
    }
  },
  "routes": [
    { "src": "/(.*)", "dest": "/client/dist/$1" },
    { "src": "/api/(.*)", "dest": "/api/$1" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
